<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.AddTask">


    <!-- Ek inputları içeren bir layout (başlangıçta görünmez) -->

    <!-- Ek inputları içeren bir layout (başlangıçta görünmez) -->

    <Button
        android:id="@+id/buttonAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekle"
        app:backgroundTint="@color/primary"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="540dp" />






    <EditText
        android:id="@+id/editTextTaskDescription"
        android:layout_width="209dp"
        android:layout_height="65dp"
        android:background="@drawable/edittextberke"
        android:ems="10"
        android:hint="Görev Açıklaması"
        android:inputType="text"
        android:textColorHint="@color/primaryhint"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Yeni Görev Ekle"
        android:textColor="@color/primary"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:entries="@array/category_array"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/addTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextberke"
        android:ems="10"
        android:hint="İsim"
        android:inputType="text"
        android:textColorHint="@color/primaryhint"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="73dp" />

    <LinearLayout
        android:id="@+id/extraInputsLayout"
        android:layout_width="408dp"
        android:layout_height="163dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="265dp">

        <EditText
            android:id="@+id/editTextStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextberke"
            android:ems="10"
            android:hint="Başlangıç"
            android:inputType="text"
            android:textColorHint="@color/primaryhint"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="261dp" />

        <EditText
            android:id="@+id/editTextEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextberke"
            android:ems="10"
            android:hint="Bitiş"
            android:inputType="text"
            android:textColorHint="@color/primaryhint"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="319dp" />

        <EditText
            android:id="@+id/editTextTaskCount"
            android:layout_width="209dp"
            android:layout_height="65dp"
            android:background="@drawable/edittextberke"
            android:ems="10"
            android:hint="Adım Sayısı"
            android:inputType="text"
            android:textColorHint="@color/primaryhint"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="123dp" />

        <!-- İlave input alanları -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
